{
  "compilerOptions": {
    "target": "ES2020",
    "experimentalDecorators": true,
    "outDir": "build",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "build", "tsconfig.json"]
}
